@* @page "/Venue/Create"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@inject ILocalStorageService localStorageService

<PageTitle>Create Venue</PageTitle>

@code {
    private VenueCreateDto NewVenue = new VenueCreateDto();
    private IBrowserFile? LogoFile { get; set; }
    private string? FileName = "Upload Logo";

    private async Task HandleFileChange(InputFileChangeEventArgs e)
    {
        var file = e.File;
        FileName = file.Name;
        LogoFile = file;
    }

   private async Task CreateVenue()
{
    try
    {
        var token = await localStorageService.GetItemAsStringAsync("jwt");
        if (string.IsNullOrEmpty(token))
        {
            Console.WriteLine("Error: Token is null or empty");
            return;
        }

        var httpClient = HttpClientFactory.CreateClient("LocalHostPolicy");
        httpClient.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

        using (var form = new MultipartFormDataContent())
        {
            if (LogoFile != null)
            {
                var fileContent = new StreamContent(LogoFile.OpenReadStream(LogoFile.Size));
                fileContent.Headers.ContentType = new MediaTypeHeaderValue(LogoFile.ContentType);
                form.Add(fileContent, "logo", LogoFile.Name);
            }

            var jsonVenue = JsonSerializer.Serialize(NewVenue);
            var venueContent = new StringContent(jsonVenue, Encoding.UTF8, "application/json");
            form.Add(venueContent, "venue");

            var response = await httpClient.PostAsync("api/Venue/Create", form);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/Venue");
            }
            else
            { 
                Console.WriteLine(response);
            }
        }
    }
    catch (Exception ex)
    {
        Console.WriteLine($"Exception: {ex.Message}");
    }
}
}

<div class="container h-100 mb-5">
    <h1 style="font-size: 1.5rem;">Create new Venue</h1>

    <form class="createForm">
        <div class="row custom-file">
            <label for="logo" class="custom-file-label">@FileName</label>
            <InputFile class="custom-file-input" OnChange="HandleFileChange" />
        </div>

        <div>
            <label for="Name">Venue Name:</label>
            <InputText @bind-Value="NewVenue.Name" class="form-control" />
        </div>

        <div>
            <label for="Email">Email:</label>
            <InputText @bind-Value="NewVenue.Email" class="form-control" />
        </div>

        <div>
            <label for="Address">Address:</label>
            <InputText @bind-Value="NewVenue.Address" class="form-control" />
        </div>

        <div>
            <label for="ContactNumber">Contact Number:</label>
            <InputText @bind-Value="NewVenue.ContactNumber" class="form-control" />
        </div>

        <div>
            <label for="AveragePrice">Average Price:</label>
            <InputNumber @bind-Value="NewVenue.AveragePrice" class="form-control" />
        </div>

        <div>
            <label for="Description">Description:</label>
            <InputTextArea @bind-Value="NewVenue.Description" class="form-control" />
        </div>

        <button type="button" @onclick="CreateVenue" class="btn btn-primary">Add Venue</button>
    </form>
</div>

<style>
